<!--pages/my-address/index.wxml-->
<view class="container">
  <view class="address-list">
    <view class="address-item" wx:for="{{addressList}}" wx:key="_id">
      <view class="address-content" bindtap="selectAddress" data-id="{{item._id}}">
        <view class="address-info">
          <view class="contact-info">
            <text class="name">{{item.name}}</text>
            <text class="phone">{{item.phone}}</text>
            <text class="default-tag" wx:if="{{item.isDefault}}">默认</text>
          </view>
          <view class="address-detail">{{item.province}}{{item.city}}{{item.district}}{{item.address}}</view>
        </view>
        <view class="address-actions">
          <view class="action-btn edit" catchtap="editAddress" data-id="{{item._id}}">
            <text class="icon">✏️</text>
            <text>编辑</text>
          </view>
          <view class="action-btn delete" catchtap="deleteAddress" data-id="{{item._id}}">
            <text class="icon">🗑️</text>
            <text>删除</text>
          </view>
        </view>
      </view>
    </view>
  </view>

  <view class="empty-tip" wx:if="{{addressList.length === 0}}">
    <text>暂无收货地址</text>
  </view>

  <view class="add-btn" bindtap="addAddress">
    <text class="icon">➕</text>
    <text>新增地址</text>
  </view>
</view>