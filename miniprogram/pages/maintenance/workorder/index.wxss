/* pages/maintenance/workorder/index.wxss */
.container {
  padding: 0 0 40rpx 0;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.header {
  background-color: #1976D2;
  padding: 30rpx;
  text-align: center;
  color: #fff;
}

.title {
  font-size: 38rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 标签栏样式 */
.tab-container {
  display: flex;
  background-color: #fff;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 0;
  position: relative;
}

.tab-item.active {
  color: #1976D2;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #1976D2;
  border-radius: 2rpx;
}

/* 工单列表样式 */
.workorder-list {
  padding: 20rpx;
}

.workorder-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.workorder-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.workorder-type {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.workorder-status {
  font-size: 26rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.workorder-status.pending {
  background-color: #FFF8E1;
  color: #FFA000;
}

.workorder-status.processing {
  background-color: #E3F2FD;
  color: #1976D2;
}

.workorder-status.completed {
  background-color: #E8F5E9;
  color: #4CAF50;
}

.workorder-content {
  padding: 20rpx;
}

.workorder-info {
  font-size: 28rpx;
}

.info-item {
  margin-bottom: 10rpx;
  display: flex;
}

.info-item .label {
  color: #999;
  width: 120rpx;
  flex-shrink: 0;
}

.info-item .value {
  color: #333;
  flex: 1;
}

.workorder-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 20rpx;
  background-color: #f9f9f9;
  border-top: 1rpx solid #f0f0f0;
}

.workorder-time {
  font-size: 24rpx;
  color: #999;
}

.workorder-action {
  font-size: 26rpx;
  color: #1976D2;
}

/* 空状态样式 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  color: #cccccc;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 操作区域样式 */
.action-container {
  padding: 30rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.create-btn {
  width: 100%;
  height: 90rpx;
  background: linear-gradient(to right, #1976D2, #1E88E5);
  color: #fff;
  border-radius: 45rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 6rpx 16rpx rgba(25, 118, 210, 0.2);
}

/* 加载状态样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #1976D2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}