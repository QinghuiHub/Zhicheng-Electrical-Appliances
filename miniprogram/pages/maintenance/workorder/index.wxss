/* pages/maintenance/workorder/index.wxss */
.container {
  padding: 0 0 40rpx 0;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.header {
  background-color: #1976D2;
  padding: 60rpx 30rpx;
  text-align: center;
  color: #fff;
  margin-bottom: 30rpx;
}

.title {
  font-size: 38rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

.form-container {
  padding: 0 30rpx;
}

.form-group {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.form-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  border-left: 8rpx solid #1976D2;
  padding-left: 15rpx;
}

.form-title .subtitle {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
}

.form-item {
  margin-bottom: 25rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.label.required::before {
  content: '*';
  color: #f44336;
  margin-right: 6rpx;
  font-size: 28rpx;
}

.input {
  width: 100%;
  height: 88rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #f9f9f9;
}

.textarea {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #f9f9f9;
}

.picker-value {
  width: 100%;
  height: 88rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  color: #666;
  background-color: #f9f9f9;
  position: relative;
}

.picker-value::after {
  content: '';
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 16rpx;
  height: 16rpx;
  border-right: 3rpx solid #999;
  border-bottom: 3rpx solid #999;
  transform: translateY(-50%) rotate(45deg);
}

.upload-tips {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.upload-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.upload-item {
  width: 200rpx;
  height: 200rpx;
  border: 1rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  background-color: #f9f9f9;
}

.upload-add {
  font-size: 60rpx;
  color: #bbb;
  line-height: 1;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

.image-item {
  border: none;
  overflow: hidden;
  background-color: #fff;
}

.image-item image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: -15rpx;
  right: -15rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}

.service-note {
  padding: 30rpx;
  margin: 30rpx 30rpx 40rpx 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.note-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  border-left: 8rpx solid #1976D2;
  padding-left: 15rpx;
}

.note-item {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  padding-left: 10rpx;
}

.note-item:last-child {
  margin-bottom: 0;
}

.submit-btn {
  width: calc(100% - 60rpx);
  height: 90rpx;
  background: linear-gradient(to right, #1976D2, #1E88E5);
  color: #fff;
  border-radius: 45rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
  margin: 0 30rpx;
  box-shadow: 0 6rpx 16rpx rgba(25, 118, 210, 0.2);
}