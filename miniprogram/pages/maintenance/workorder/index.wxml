<view class="container">
  <view class="header">
    <view class="title">工单管理</view>
    <view class="subtitle">维修安装一站式服务</view>
  </view>
  
  <view class="tab-container">
    <view class="tab-item {{activeTab === 'all' ? 'active' : ''}}" bindtap="switchTab" data-tab="all">全部</view>
    <view class="tab-item {{activeTab === 'pending' ? 'active' : ''}}" bindtap="switchTab" data-tab="pending">待处理</view>
    <view class="tab-item {{activeTab === 'processing' ? 'active' : ''}}" bindtap="switchTab" data-tab="processing">处理中</view>
    <view class="tab-item {{activeTab === 'completed' ? 'active' : ''}}" bindtap="switchTab" data-tab="completed">已完成</view>
  </view>
  
  <view class="workorder-list" wx:if="{{workOrders.length > 0}}">
    <view class="workorder-item" wx:for="{{workOrders}}" wx:key="id" bindtap="viewWorkOrderDetail" data-id="{{item.id}}">
      <view class="workorder-header">
        <view class="workorder-type">{{item.type}}</view>
        <view class="workorder-status {{item.status}}">{{item.statusText}}</view>
      </view>
      <view class="workorder-content">
        <view class="workorder-info">
          <view class="info-item">
            <text class="label">设备：</text>
            <text class="value">{{item.deviceType}} {{item.brand}} {{item.model}}</text>
          </view>
          <view class="info-item">
            <text class="label">描述：</text>
            <text class="value">{{item.description}}</text>
          </view>
          <view class="info-item">
            <text class="label">地址：</text>
            <text class="value">{{item.address}}</text>
          </view>
          <view class="info-item">
            <text class="label">预约时间：</text>
            <text class="value">{{item.appointmentTime}}</text>
          </view>
        </view>
      </view>
      <view class="workorder-footer">
        <view class="workorder-time">{{item.createTime}}</view>
        <view class="workorder-action">查看详情 ></view>
      </view>
    </view>
  </view>
  
  <view class="empty-container" wx:else>
    <view class="empty-icon">📋</view>
    <view class="empty-text">暂无工单记录</view>
  </view>
  
  <!-- <view class="action-container">
    <button class="create-btn" bindtap="createWorkOrder">新建工单</button>
  </view> -->
</view> 