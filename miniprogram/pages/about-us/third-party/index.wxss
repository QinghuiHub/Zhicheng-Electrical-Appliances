/* pages/about-us/third-party/index.wxss */
page {
  background-color: #fff;
  font-size: 28rpx;
}

.third-party-container {
  padding: 30rpx 24rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

.third-party-content {
  width: 100%;
}

.third-party-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.third-party-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #333;
}

.section-content {
  color: #666;
  line-height: 1.6;
}

.info-item {
  display: block;
  margin-bottom: 12rpx;
  padding-left: 10rpx;
}

.third-party-item {
  margin-bottom: 24rpx;
  padding-left: 10rpx;
}

.item-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #444;
}

.item-content {
  padding-left: 20rpx;
  margin-bottom: 16rpx;
}

.partner-name {
  display: block;
  font-weight: bold;
  margin-bottom: 6rpx;
  color: #555;
}

.share-purpose, .share-info {
  display: block;
  margin-bottom: 6rpx;
  color: #666;
  font-size: 26rpx;
} 