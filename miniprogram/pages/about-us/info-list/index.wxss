/* pages/about-us/info-list/index.wxss */
page {
  background-color: #fff;
  font-size: 28rpx;
}

.info-list-container {
  padding: 30rpx 24rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

.info-list-content {
  width: 100%;
}

.info-list-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.info-list-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #333;
}

.section-content {
  color: #666;
  line-height: 1.6;
}

.info-item {
  display: block;
  margin-bottom: 12rpx;
  padding-left: 10rpx;
} 