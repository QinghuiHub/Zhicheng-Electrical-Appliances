<!--pages/user-center/index.wxml-->
<view class="user-center">
  <!-- 用户信息区域 -->
  <view class="user-info-container">
    <view class="user-info">
      <view class="avatar-container" bindtap="chooseAvatar">
        <image class="avatar" src="{{userInfo.avatarUrl || '../../../images/avatar.png'}}"></image>
        <view class="edit-icon">
          <text>✏️</text>
        </view>
      </view>
      <view class="user-detail">
        <view class="nickname-container">
          <text class="nickname" wx:if="{{userInfo.nickName}}">{{userInfo.nickName}}</text>
          <button wx:else class="get-user-info" bindtap="editNickname">设置昵称</button>
        </view>
        <text class="user-id" wx:if="{{userInfo.nickName}}">用户ID: {{userId}}</text>
      </view>
    </view>
  </view>

  <!-- 功能列表 -->
  <view class="function-list">
    <view class="function-item">
      <text class="function-title">我的订单</text>
      <text class="function-arrow">></text>
    </view>
    <view class="function-item">
      <text class="function-title">我的地址</text>
      <text class="function-arrow">></text>
    </view>
    <view class="function-item">
      <text class="function-title">联系客服</text>
      <text class="function-arrow">></text>
    </view>
    <view class="function-item" bindtap="navigateToAboutUs">
      <text class="function-title">关于我们</text>
      <text class="function-arrow">></text>
    </view>
  </view>
</view>