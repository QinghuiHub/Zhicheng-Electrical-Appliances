.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 0 30rpx 0;
  width: 100%;
  box-sizing: border-box;
  background-color: #f8f8f8;
}

/* 头部区域 */
.header-section {
  width: 100%;
  padding: 30rpx 20rpx;
  background-color: #1976D2;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
  box-sizing: border-box;
}

.logo-area {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.logo-image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.company-name {
  font-size: 40rpx;
  font-weight: bold;
}

.slogan {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 轮播图 */
.swiper {
  width: 100%;
  height: 360rpx;
}

.swiper-item-wrap {
  width: 100%;
  height: 100%;
  padding: 0;
  box-sizing: border-box;
  transition: all 0.3s ease;
  display: flex;
  justify-content: center;
  align-items: center;
}

.swiper-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: all 0.3s ease;
  opacity: 0.9;
  transform: scale(0.98);
}

.swiper-image.active {
  opacity: 1;
  transform: scale(1);
}

/* 快速联系 */
.quick-contact {
  width: 92%;
  display: flex;
  justify-content: space-between;
  margin-top: -40rpx;
  z-index: 1;
  position: relative;
}

.contact-item {
  width: 48%;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.contact-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.contact-icon image {
  width: 40rpx;
  height: 40rpx;
}

.contact-icon .icon-text {
  font-size: 32rpx;
  line-height: 1;
}

.phone-icon {
  color: #1976D2;
}

.location-icon {
  color: #FF5722;
}

.contact-text {
  font-size: 24rpx;
  color: #333;
}

/* 服务项目 */
.service-section {
  width: 92%;
  margin-top: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 30rpx;
  background-color: #1976D2;
  border-radius: 4rpx;
}

.service-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.service-item {
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
  transition: all 0.3s;
}

.service-item:active {
  transform: scale(0.98);
}

.service-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 15rpx;
}

.service-icon image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.service-icon .icon-text {
  font-size: 36rpx;
  line-height: 1;
}

.repair-icon {
  background-color: #E3F2FD;
}

.install-icon {
  background-color: #E8F5E9;
}

.maintain-icon {
  background-color: #FFF8E1;
}

.recycle-icon {
  background-color: #F3E5F5;
}

.service-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.service-desc {
  font-size: 22rpx;
  color: #999;
}

/* 优势展示 */
.advantage-section {
  width: 92%;
  margin-top: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.advantage-list {
  display: flex;
  flex-direction: column;
}

.advantage-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 16rpx;
  border-radius: 10rpx;
  background-color: #f9f9f9;
}

.advantage-item:last-child {
  margin-bottom: 0;
}

.advantage-icon {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-color: #E3F2FD;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.advantage-icon image {
  width: 40rpx;
  height: 40rpx;
}

.advantage-icon .icon-text {
  font-size: 36rpx;
  line-height: 1;
}

.advantage-content {
  flex: 1;
}

.advantage-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.advantage-desc {
  font-size: 24rpx;
  color: #666;
}

/* 品牌展示 */
.brand-section {
  width: 92%;
  margin-top: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
}

.brand-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15rpx;
  width: 100%;
  box-sizing: border-box;
}

.brand-item {
  height: 90rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.brand-item image {
  max-width: 90%;
  max-height: 90%;
  opacity: 0.75;
}
