<!--志成电器首页-->
<view class="container">
    <view class="header-section">
        <view class="logo-area">
            <!-- <image class="logo-image" src="../../images/logo.png" mode="aspectFit"></image> -->
            <!-- <view class="company-name">志成电器</view> -->
        </view>
        <view class="slogan">专业维修，品质服务</view>
    </view>
    
    <swiper 
        class="swiper" 
        indicator-dots="{{true}}" 
        autoplay="{{true}}" 
        interval="{{4000}}" 
        duration="{{800}}" 
        circular="{{true}}" 
        easing-function="easeInOutCubic"
        bindchange="swiperChange"
        current="{{currentSwiperIndex}}">
        <swiper-item>
            <view class="swiper-item-wrap">
                <image 
                    class="swiper-image {{currentSwiperIndex == 0 ? 'active' : ''}}" 
                    src="cloud://cloud1-9guuoeyie2fd8916.636c-cloud1-9guuoeyie2fd8916-1360998817/微信图片_20250525040651.png" 
                    mode="aspectFill"
                    binderror="imageLoadError"
                    bindload="imageLoadSuccess"
                    data-index="0"></image>
            </view>
        </swiper-item>
        <swiper-item>
            <view class="swiper-item-wrap">
                <image 
                    class="swiper-image {{currentSwiperIndex == 1 ? 'active' : ''}}" 
                    src="cloud://cloud1-9guuoeyie2fd8916.636c-cloud1-9guuoeyie2fd8916-1360998817/237879f1f43163117b1dc780f7a4f4eb35da00f7_size510_w1080_h608.jfif" 
                    mode="aspectFill"
                    binderror="imageLoadError"
                    bindload="imageLoadSuccess"
                    data-index="1"></image>
            </view>
        </swiper-item>
    </swiper>
    
    <view class="quick-contact">
        <view class="contact-item" bindtap="makePhoneCall">
            <view class="contact-icon phone-icon">
                <text class="icon-text">📞</text>
            </view>
            <view class="contact-text">一键拨号</view>
        </view>
        <view class="contact-item" bindtap="openLocation">
            <view class="contact-icon location-icon">
                <text class="icon-text">📍</text>
            </view>
            <view class="contact-text">查看门店</view>
        </view>
    </view>
    
    <view class="service-section">
        <view class="section-title">服务项目</view>
        <view class="service-grid">
            <view class="service-item" bindtap="navigateToMaintenance" data-type="fault">
                <view class="service-icon repair-icon">
                    <text class="icon-text">🔧</text>
                </view>
                <view class="service-text">预约维修</view>
                <view class="service-desc">专业技师上门维修</view>
            </view>
            
            <view class="service-item" bindtap="navigateToMaintenance" data-type="workorder">
                <view class="service-icon install-icon">
                    <text class="icon-text">🔌</text>
                </view>
                <view class="service-text">预约安装</view>
                <view class="service-desc">专业安装各类家电</view>
            </view>
            
            <view class="service-item" bindtap="navigateToMaintenance" data-type="inventory">
                <view class="service-icon maintain-icon">
                    <text class="icon-text">🔄</text>
                </view>
                <view class="service-text">保养换芯</view>
                <view class="service-desc">定期保养延长寿命</view>
            </view>
            
            <view class="service-item" bindtap="navigateToMaintenance" data-type="statistics">
                <view class="service-icon recycle-icon">
                    <text class="icon-text">♻️</text>
                </view>
                <view class="service-text">旧机回收</view>
                <view class="service-desc">环保回收旧电器</view>
            </view>
        </view>
    </view>
    
    <view class="advantage-section">
        <view class="section-title">我们的优势</view>
        <view class="advantage-list">
            <view class="advantage-item">
                <view class="advantage-icon">
                    <text class="icon-text">⭐</text>
                </view>
                <view class="advantage-content">
                    <view class="advantage-title">专业品质</view>
                    <view class="advantage-desc">拥有专业维修团队和设备</view>
                </view>
            </view>
            <view class="advantage-item">
                <view class="advantage-icon">
                    <text class="icon-text">⚡</text>
                </view>
                <view class="advantage-content">
                    <view class="advantage-title">快速响应</view>
                    <view class="advantage-desc">24小时内上门服务</view>
                </view>
            </view>
            <view class="advantage-item">
                <view class="advantage-icon">
                    <text class="icon-text">🛡️</text>
                </view>
                <view class="advantage-content">
                    <view class="advantage-title">服务保障</view>
                    <view class="advantage-desc">维修服务质保90天</view>
                </view>
            </view>
        </view>
    </view>
    
    <view class="brand-section">
        <view class="section-title">支持品牌</view>
        <view class="brand-list">
            <view class="brand-item">
                <!-- <image src="../../images/maintenance/brand1.png" mode="aspectFit"></image> -->
                格力
            </view>
            <view class="brand-item">
                <!-- <image src="../../images/maintenance/brand2.png" mode="aspectFit"></image> -->
                美的
            </view>
            <view class="brand-item">
                <!-- <image src="../../images/maintenance/brand3.png" mode="aspectFit"></image> -->
                海尔
            </view>
            <view class="brand-item">
                <!-- <image src="../../images/maintenance/brand4.png" mode="aspectFit"></image> -->
                松下
            </view>
            <view class="brand-item">
                <!-- <image src="../../images/maintenance/brand5.png" mode="aspectFit"></image> -->
                苏泊尔
            </view>
            <view class="brand-item">
                <!-- <image src="../../images/maintenance/brand6.png" mode="aspectFit"></image> -->
                TCL
            </view>
        </view>
    </view>
</view>
