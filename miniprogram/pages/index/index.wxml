<!--志成电器-->
<view class="container">
    <!--<view class="title">志成电器</view>-->
    
    <swiper 
        class="swiper" 
        indicator-dots="{{true}}" 
        autoplay="{{true}}" 
        interval="{{4000}}" 
        duration="{{800}}" 
        circular="{{true}}" 
        easing-function="easeInOutCubic"
        bindchange="swiperChange"
        current="{{currentSwiperIndex}}">
        <swiper-item>
            <view class="swiper-item-wrap">
                <image 
                    class="swiper-image {{currentSwiperIndex == 0 ? 'active' : ''}}" 
                    src="cloud://cloud1-9guuoeyie2fd8916.636c-cloud1-9guuoeyie2fd8916-1360998817/微信图片_20250525040651.png" 
                    mode="aspectFill"
                    binderror="imageLoadError"
                    bindload="imageLoadSuccess"
                    data-index="0"></image>
            </view>
        </swiper-item>
        <swiper-item>
            <view class="swiper-item-wrap">
                <image 
                    class="swiper-image {{currentSwiperIndex == 1 ? 'active' : ''}}" 
                    src="cloud://cloud1-9guuoeyie2fd8916.636c-cloud1-9guuoeyie2fd8916-1360998817/237879f1f43163117b1dc780f7a4f4eb35da00f7_size510_w1080_h608.jfif" 
                    mode="aspectFill"
                    binderror="imageLoadError"
                    bindload="imageLoadSuccess"
                    data-index="1"></image>
            </view>
        </swiper-item>
    </swiper>
    
    <view class="maintenance-section">
        <view class="section-title">预约服务</view>
        <view class="maintenance-grid">
            <view class="maintenance-item" bindtap="navigateToMaintenance" data-type="fault">
                <view class="maintenance-icon fault-icon">
                    <image src="../../images/maintenance/wrench.png" mode="aspectFit"></image>
                </view>
                <view class="maintenance-text">预约维修</view>
            </view>
            
            <view class="maintenance-item" bindtap="navigateToMaintenance" data-type="workorder">
                <view class="maintenance-icon workorder-icon">
                    <image src="../../images/maintenance/document.png" mode="aspectFit"></image>
                </view>
                <view class="maintenance-text">预约安装</view>
            </view>
            
            <view class="maintenance-item" bindtap="navigateToMaintenance" data-type="inventory">
                <view class="maintenance-icon inventory-icon">
                    <image src="../../images/maintenance/box.png" mode="aspectFit"></image>
                </view>
                <view class="maintenance-text">保养换芯</view>
            </view>
            
            <view class="maintenance-item" bindtap="navigateToMaintenance" data-type="statistics">
                <view class="maintenance-icon statistics-icon">
                    <image src="../../images/maintenance/chart.png" mode="aspectFit"></image>
                </view>
                <view class="maintenance-text">旧机回收</view>
            </view>
        </view>
    </view>
</view>
