page {
  background-color: #f5f7fa;
}

.page {
  padding: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.list {
  padding: 0;
}

.item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 15rpx;
}

.name {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.address {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.distance {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 15rpx;
}

.btn {
  background-color: #2c3e50;
  color: #fff;
  font-size: 24rpx;
  padding: 0 20rpx;
  height: 60rpx;
