<!--pages/examples/index.wxml-->
<view class="page">
  <view class="header">
    <text class="title">为你推荐精选门店</text>
  </view>
  
  <view class="list">
    <view class="item" wx:for="{{storeList}}" wx:key="id">
      <view class="info">
        <view class="icon"></view>
        <view class="detail">
          <view class="name">{{item.name}}</view>
          <view class="address">{{item.address}}</view>
          <view class="distance">
            <view class="dot"></view>
            <text>{{item.distance}}m</text>
          </view>
        </view>
      </view>
      <view class="action">
        <button class="btn" bindtap="goToStore">进店选购</button>
      </view>
    </view>
  </view>
</view>