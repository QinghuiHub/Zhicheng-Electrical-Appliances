/* pages/examples/index.wxss */
page {
  background-color: #f5f7fa;
  font-size: 28rpx;
}

.store-page {
  padding: 0;
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  padding: 24rpx 24rpx 16rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.store-list {
  padding: 8rpx 24rpx;
}

.store-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.store-info {
  display: flex;
  align-items: center;
  flex: 1;
  max-width: calc(100% - 130rpx);
  overflow: hidden;
}

.store-icon {
  width: 56rpx;
  height: 56rpx;
  margin-right: 16rpx;
  background-color: #4a90e2;
  border-radius: 6rpx;
  flex-shrink: 0;
}

.store-detail {
  flex: 1;
  overflow: hidden;
  min-width: 0;
}

.store-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.store-address {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.store-distance {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #999;
}

.location-icon {
  width: 18rpx;
  height: 18rpx;
  margin-right: 4rpx;
  background-color: #999;
  border-radius: 50%;
  flex-shrink: 0;
}

.store-action {
  margin-left: 12rpx;
  flex-shrink: 0;
}

.enter-btn {
  background-color: #2c3e50;
  color: #fff;
  font-size: 22rpx;
  padding: 0 16rpx;
  height: 54rpx;
  line-height: 54rpx;
  border-radius: 27rpx;
  min-width: 110rpx;
  text-align: center;
  border: none;
  font-weight: normal;
}

.enter-btn::after {
  border: none;
}

/* 小屏幕设备 */
@media screen and (max-width: 320px) {
  .store-icon {
    width: 50rpx;
    height: 50rpx;
    margin-right: 12rpx;
  }
  
  .store-name {
    font-size: 26rpx;
  }
  
  .store-address {
    font-size: 22rpx;
  }
  
  .store-distance {
    font-size: 20rpx;
  }
  
  .enter-btn {
    font-size: 20rpx;
    height: 50rpx;
    line-height: 50rpx;
    min-width: 100rpx;
    padding: 0 12rpx;
  }
}

/* 中等屏幕设备 */
@media screen and (min-width: 375px) {
  .store-icon {
    width: 60rpx;
    height: 60rpx;
  }
  
  .store-name {
    font-size: 30rpx;
  }
  
  .store-address {
    font-size: 24rpx;
  }
  
  .store-distance {
    font-size: 22rpx;
  }
  
  .enter-btn {
    font-size: 24rpx;
    height: 58rpx;
    line-height: 58rpx;
    min-width: 120rpx;
  }
}

/* 大屏幕设备 */
@media screen and (min-width: 414px) {
  .header {
    padding: 30rpx 30rpx 20rpx;
  }
  
  .store-list {
    padding: 10rpx 30rpx;
  }
  
  .store-item {
    padding: 24rpx;
    margin-bottom: 20rpx;
  }
  
  .store-icon {
    width: 64rpx;
    height: 64rpx;
    margin-right: 20rpx;
  }
  
  .store-name {
    font-size: 32rpx;
    margin-bottom: 8rpx;
  }
  
  .store-address {
    font-size: 26rpx;
    margin-bottom: 6rpx;
  }
  
  .store-distance {
    font-size: 24rpx;
  }
  
  .location-icon {
    width: 20rpx;
    height: 20rpx;
    margin-right: 6rpx;
  }
  
  .enter-btn {
    font-size: 26rpx;
    height: 60rpx;
    line-height: 60rpx;
    min-width: 130rpx;
    padding: 0 20rpx;
  }
}