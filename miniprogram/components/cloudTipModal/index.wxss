.modal {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 999;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 40rpx;
  width: 80%;
  max-width: 600rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

.modal-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 40rpx;
  text-align: center;
}

.modal-btn {
  background-color: #07C160;
  color: white;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 8rpx;
  font-size: 30rpx;
} 